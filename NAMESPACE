import(Biobase, oligo, methods)
##exportPattern("^[^\\.]")
exportClasses(AnnotatedSnpSet,
              AnnotatedSnpCallSet,
              AnnotatedSnpCopyNumberSet)
exportMethods(getSnpAnnotation,
              alleleA,
              alleleB,
              chromosome,
              chromosomeAnnotation, 
              "chromosomeAnnotation<-",
              coerce,
              calculateCopyNumber,
              dbSnpId,
              enzyme,
              fragmentLength,
              initialize,
              plotCytoband,
              plotSnp,
              position,
              selectSomeIndex,  
              show,              
              smoothSnp,
              summary)
export("showSummary", "centromere", "chromosomeSize", "unsplitS4")


##Export classes from oligo
exportClasses(oligoSnpSet,
              SnpQSet,
              SnpCallSet,
              SnpCopyNumberSet)

##Export methods from oligo
exportMethods(position,
              copyNumber,
              "copyNumber<-",
              calls,
              "calls<-",
              cnConfidence,
              "cnConfidence<-",
              callsConfidence,
              "callsConfidence<-")

##export functions defined in functions.R so that the oligo methods
##will be available for external use
export(chromosome,
       copyNumber,
       "copyNumber<-",
       cnConfidence,
       "cnConfidence<-",
       calls,
       "calls<-",
       callsConfidence,
       "callsConfidence<-",
       position)

              
