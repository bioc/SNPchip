import(Biobase, oligo, methods)
exportClasses(ParESet,
              ParSnpCopyNumberSet,
              ParSnpCallSet,
              ParSnpSet)

exportMethods(getSnpAnnotation,
              alleleA,
              alleleB,
              calculateCopyNumber,              
              chromosome,
              coerce,
              dbSnpId,
              enzyme,
              fragmentLength,
              initialize,
              position,
              selectSomeIndex,  
              show,
              smoothSnp,
              summary)

export(centromere,
       chromosomeSize,
       showSummary,
       unsplitS4)

##par class methods
exportMethods("$",
              "$<-",
              allPlots,
              getPar,
              plotSnp,              
              snpPar,
              "snpPar<-")              
export(plotCytoband)
              
##Export classes from oligo
exportClasses(oligoSnpSet,
              SnpQSet,
              SnpCallSet,
              SnpCopyNumberSet)

##Export methods from oligo
exportMethods(position,
              copyNumber,
              "copyNumber<-",
              calls,
              "calls<-",
              cnConfidence,
              "cnConfidence<-",
              callsConfidence,
              "callsConfidence<-")

##export functions defined in functions.R so that the oligo methods
##will be available for external use
export(chromosome,
       copyNumber,
       "copyNumber<-",
       cnConfidence,
       "cnConfidence<-",
       calls,
       "calls<-",
       callsConfidence,
       "callsConfidence<-",
       position)

              
